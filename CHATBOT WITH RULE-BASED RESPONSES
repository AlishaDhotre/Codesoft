def chatbot():
    print("Chatbot: Hello! I am a simple chatbot.")
    print("Chatbot: Type 'bye' to end the conversation.\n")

    while True:
        user_input = input("You: ").lower()

        if user_input == "bye":
            print("Chatbot: Goodbye! I feel nice to talk to you Have a nice day.")
            break

        elif "hello" in user_input or "hi" in user_input:
            print("Chatbot: Hello! Can you tell me how can I help you?")

        elif "how are you" in user_input:
            print("Chatbot: I am fine. Thank you for asking I am happy that you ask me!")

        elif "your name" in user_input:
            print("Chatbot: I am a rule-based chatbot.")

        elif "help" in user_input:
            print("Chatbot: I can answer simple questions like greetings or my name.")

        elif "thank you" in user_input or "thanks" in user_input:
            print("Chatbot: You're welcome!")

        else:
            print("Chatbot: Sorry, I don't understand that, can you ask me another question.")

chatbot()

# Codesoft
board = [' '] * 9

def show():
    print()
    print(board[0], '|', board[1], '|', board[2])
    print('---------')
    print(board[3], '|', board[4], '|', board[5])
    print('---------')
    print(board[6], '|', board[7], '|', board[8])
    print()

def win():
    if board[0] == board[1] == board[2] != ' ':
        return True
    if board[3] == board[4] == board[5] != ' ':
        return True
    if board[6] == board[7] == board[8] != ' ':
        return True
    if board[0] == board[3] == board[6] != ' ':
        return True
    if board[1] == board[4] == board[7] != ' ':
        return True
    if board[2] == board[5] == board[8] != ' ':
        return True
    if board[0] == board[4] == board[8] != ' ':
        return True
    if board[2] == board[4] == board[6] != ' ':
        return True
    return False

def draw():
    for i in board:
        if i == ' ':
            return False
    return True

def user():
    pos = int(input("Enter position (1-9): "))
    if board[pos-1] == ' ':
        board[pos-1] = 'X'
    else:
        print("Wrong input")
        user()

def comp():
    for i in range(9):
        if board[i] == ' ':
            board[i] = 'O'
            break

print("TIC TAC TOE GAME")
print("Player = X Computer = O")
while True:
    show()
    user()
    if win():
        show()
        print("Player wins")
        break
    if draw():
        show()
        print("Match draw")
        break
    comp()
    if win():
        show()
        print("Computer wins")
        break
    if draw():
        show()
        print("Match draw")
        break
